<% include ./partials/header.ejs %>
  <div class="min-h-screen flex justify-center items-center p-0 sm:p-4">
    <div class="w-full max-w-4xl bg-gray-800 rounded-xl shadow-lg p-6 md:p-10">
      <!-- Header -->
      <h1 class="text-2xl text-white md:text-4xl font-bold text-center mb-8">Settings</h1>

      <!-- Theme Selector -->
      <div class="mb-8 ">
        
        <h2 class="text-lg md:text-xl font-semibold mb-4">Theme</h2>
        <div class="flex items-center gap-4 justify-center visibility-hidden">
          <button class="w-10 h-10 bg-gray-200 rounded-full shadow-md hover:scale-110 hover:ring-4 hover:ring-gray-400 transition-all"></button>
          <button class="w-10 h-10 bg-gray-700 rounded-full shadow-md hover:scale-110 hover:ring-4 hover:ring-gray-500 transition-all"></button>
          <button class="w-10 h-10 bg-indigo-500 rounded-full shadow-md hover:scale-110 hover:ring-4 hover:ring-indigo-700 transition-all"></button>
        </div>
      </div>

      <!-- Add Email -->
      <div class="mb-8">
        <h2 class="text-lg md:text-xl font-semibold mb-4">Add Email</h2>
        <form method="POST" action="/add-email" class="flex flex-col md:flex-row items-center gap-4">
          <input
            type="email"
            readonly
            name="email"
            
            class="w-full md:w-auto flex-1 px-4 py-2 bg-gray-700 text-white rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none"
          />
          <div
            
            class="w-full md:w-auto px-6 py-2 bg-indigo-600 hover:bg-indigo-500 text-white font-medium rounded-lg transition-all"
          >
            Add
        </div>
        </form>
      </div>



      
      <!-- Delete Account -->
      <div class="mb-8">
        <h2 class="text-lg md:text-xl font-semibold mb-4 text-red-500">Danger Zone</h2>
        <form method="POST" action="/delete-account/<%= user._id %>" class="flex flex-col md:flex-row items-center gap-4 bg-red-700 p-6 rounded-lg">
          <p class="text-red-300 flex-1 text-center md:text-left">
            Once deleted, your account cannot be recovered.
          </p>
          <button
         type="button"
            onclick="showAlert()"
            class="w-full md:w-auto px-6 py-2 bg-red-600 hover:bg-red-500 text-white font-medium rounded-lg transition-all"
          >
            Delete Account
          </button>
        
      </div>

      <!-- Save Settings Button -->
      <div class="flex justify-center md:justify-end">
        
       <a href="/profile" class="decoration-none"><button
       
          type="button"
          class="w-full md:w-auto px-6 py-3 bg-green-600 hover:bg-green-500 text-white font-medium rounded-lg transition-all"
        >
          Save Settings
        </button>
      </a> 
      </div>
    </div>
  </div>



  
  <!-- Custom Alert Box (Hidden by default) -->
  <div 
    id="customAlert" 
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-white rounded-lg shadow-lg p-6 w-80">
      <h2 class="text-lg font-bold text-gray-800 mb-4">Are you sure?</h2>
      <p class="text-gray-600 mb-6">Do you really want to delete your account? This action cannot be undone.</p>
      <div class="flex justify-end space-x-4">
        <button 
        type="button"
          onclick="cancelAlert()" 
          class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">
          Cancel
        </button>
        <button 
        type="submit"
          onclick="deleteAccount()" 
          class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">
          Delete
        </button>
      </form>
      </div>
    </div>
  </div>

  <script>
    // Show the custom alert box
    function showAlert() {
      document.getElementById('customAlert').classList.remove('hidden');
    }

    // Hide the custom alert box
    function cancelAlert() {
      document.getElementById('customAlert').classList.add('hidden');
    }

    // Handle the delete action
    function deleteAccount() {
      document.getElementById('customAlert').classList.add('hidden');
      alert('Your account has been deleted.'); // Replace with your delete logic
    }
  </script>

  <% include ./partials/footer.ejs %>